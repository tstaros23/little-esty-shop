<%= form_with url: merchant_items_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :description %><br>
  <%= f.text_field :description %><br><br><br>
  <%= f.label :unit_price %>
  <%= f.number_field :unit_price %><br><br><br>
  <%= f.submit 'Submit' %>
<% end %>
