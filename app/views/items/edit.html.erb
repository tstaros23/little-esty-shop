<%= form_with url: item_path(@item), method: :patch, local: true do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, value: @item.name %><br><br>
  <%= f.label :description %><br>
  <%= f.text_field :description, value: @item.description %><br><br><br>
  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, value: @item.unit_price %><br><br><br>
  <%= f.submit 'Submit' %>
<% end %>
