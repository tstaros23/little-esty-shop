<h1>Admin Dashboard</h1>

<%= link_to 'Merchants', admin_merchants_path %>
<%= link_to 'Invoices', admin_invoices_path %>


<section id='incomplete-invoices'>
  <h3>Incomplete Invoices</h3>
  <% @incomplete_invoices.each do |invoice| %>
    <%= link_to "#{invoice.id}", admin_invoice_path(invoice) %>
  <% end %>
</section>

<section id='five_best_customers'>
  <h3>Five Best Customers:</h3>
  <ol>
    <% @five_best_customers.each do |customer| %>
      <li><%= "#{customer.first_name}" %>
      <%= "#{customer.last_name}" %></li>
    <% end %>
</ol>

</section>
