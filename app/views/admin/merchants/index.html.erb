
<%= link_to 'New Merchant', new_admin_merchant_path %><br>

<section id='enabled-merchants'>
  <h3>Enabled Merchants</h3>
  <% @enabled_merchants.each do |merchant| %>
    <p><%= link_to merchant.name, admin_merchant_path(merchant)%>
    <%= button_to "Disable: #{merchant.name}", "#{admin_merchant_path(merchant)}?disable=t", method: :patch %></p>
  <% end %>
</section>

<section id='disabled-merchants'>
  <h3>Disabled Merchants</h3>
  <% @disabled_merchants.each do |merchant| %>
    <p><%= link_to merchant.name, admin_merchant_path(merchant)%>
    <%= button_to "Enable: #{merchant.name}", "#{admin_merchant_path(merchant)}?enable=t", method: :patch %></p>
  <% end %>
</section>

<section id='top-5-merchants'>
  <h3>Five Best Merchants:</h3>
  <ol>
    <% @top_five_merchants.each do |merchant| %>
        <li> <%= link_to merchant.name, admin_merchant_path(merchant) %>- Total revenue: <%= merchant.total_revenue %></li>
    <% end %>
  </ol>

</section>
